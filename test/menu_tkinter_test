import tkinter as tk

def update_values():
    # Mise à jour des variables à partir des widgets
    num_var1.set(scale_var1.get())
    num_var2.set(scale_var2.get())
    str_var1.set(entry_var1.get())
    str_var2.set(entry_var2.get())
    print("Variables mises à jour:")
    print(f"Numérique 1: {num_var1.get()}, Numérique 2: {num_var2.get()}")
    print(f"Texte 1: {str_var1.get()}, Texte 2: {str_var2.get()}")

# Initialisation de la fenêtre principale
root = tk.Tk()
root.title("Menu de Paramétrage")
root.configure(bg='#87CEFA')  # Fond avec la couleur spécifiée
root.geometry("400x300")  # Taille initiale
root.resizable(True, True)  # Permet le redimensionnement

# Variables
num_var1 = tk.DoubleVar()
num_var2 = tk.DoubleVar()
str_var1 = tk.StringVar()
str_var2 = tk.StringVar()

# Styles personnalisés pour les sliders
slider_style = {
    "bg": "#87CEFA",  # Couleur du fond
    "troughcolor": "grey",  # Couleur de la zone de défilement
    "sliderlength": 20,  # Longueur du curseur
    "relief": "flat"  # Style de relief
}

# Labels et widgets pour les variables numériques
label_var1 = tk.Label(root, text="Variable Numérique 1", bg='#87CEFA')
label_var1.pack(pady=(10, 0))
scale_var1 = tk.Scale(root, from_=0, to=100, orient="horizontal", **slider_style)
scale_var1.pack(pady=5)

label_var2 = tk.Label(root, text="Variable Numérique 2", bg='#87CEFA')
label_var2.pack(pady=(10, 0))
scale_var2 = tk.Scale(root, from_=0, to=100, orient="horizontal", **slider_style)
scale_var2.pack(pady=5)

# Labels et widgets pour les variables de type chaîne
label_str1 = tk.Label(root, text="Texte Variable 1", bg='#87CEFA')
label_str1.pack(pady=(10, 0))
entry_var1 = tk.Entry(root, textvariable=str_var1, bg='white')
entry_var1.pack(pady=5)

label_str2 = tk.Label(root, text="Texte Variable 2", bg='#87CEFA')
label_str2.pack(pady=(10, 0))
entry_var2 = tk.Entry(root, textvariable=str_var2, bg='white')
entry_var2.pack(pady=5)

# Bouton pour mettre à jour les valeurs
update_button = tk.Button(root, text="Mettre à jour les variables", command=update_values, bg='white')
update_button.pack(pady=10)

# Lancement de la boucle principale de l'interface
root.mainloop()
